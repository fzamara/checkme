generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Tenant {
  id        String   @id @default(cuid())
  name      String
  users     User[]
  forms     Form[]
  createdAt DateTime @default(now())
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  passwordHash  String
  tenantId      String
  role          Role     @default(USER)
  tenant        Tenant   @relation(fields: [tenantId], references: [id])
  createdAt     DateTime @default(now())
}

model Form {
  id        String   @id @default(cuid())
  title     String
  fields    Json
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}